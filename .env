# Token de segurança do próprio microserviço (para autenticação externa)
API_KEY=senha_privada_do_microservico

# Lista de UUIDs de bots permitidos
ALLOWED_CHATBOT_UUIDS=uuid-bot-1,uuid-bot-2,uuid-bot-3

# Mapeamento entre bots e tokens de clientes (ex: uuid-bot-1 usa token-cliente-A)
CHATBOT_TOKENS_MAP=uuid-bot-1:Token abc123,uuid-bot-2:Token def456,uuid-bot-3:Token xyz789

# Nome base para user_key (caso não venha via @meta)
BASE_USER_KEY=lead_simplifique

# Porta do servidor (padrão para Railway)
PORT=8000

# Debug de logs (true/false)
DEBUG_MODE=true

# (opcional) Prompt base se não for enviado no request
CUSTOM_BASE_SYSTEM_PROMPT=

# (opcional) Endpoint externo para redirecionamento de mensagens
RECIPIENT_URL=
