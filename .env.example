# Token para autenticação das chamadas ao adaptador
ACCESS_TOKEN=seu_token_privado_aqui

# Token usado para autenticar no Simplifique.ai (token padrão, usado quando não há token específico)
SIMPLIFIQUE_API_KEY=seu_token_simplifique_aqui

# Lista de chatbot_uuid válidos (separados por vírgula, sem espaços)
ALLOWED_CHATBOT_UUIDS=uuid-do-meu-bot-1,uuid-do-meu-bot-2

# Mapeamento de UUIDs para tokens específicos (formato: uuid1:token1,uuid2:token2)
CHATBOT_TOKENS_MAP=uuid-do-meu-bot-1:token_subconta1,uuid-do-meu-bot-2:token_subconta2

# Valor base ou fixo para o campo user_key
BASE_USER_KEY=usuario_adaptador

# Porta para rodar no Railway (default: 8000)
PORT=8000

# Parâmetros opcionais para a API do Stammer
# URL para onde as mensagens serão enviadas durante o handoff (opcional)
RECIPIENT_URL=

# Prompt de sistema personalizado para substituir o do chatbot (opcional)
CUSTOM_BASE_SYSTEM_PROMPT=
